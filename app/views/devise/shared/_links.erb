<% links = [] %>
<%- if controller_name != 'sessions' && ! current_user  %>
  <% links.push link_to "Sign in", new_session_path(resource_name) %>
<% end -%>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <% links.push link_to "Sign up", new_registration_path(resource_name) %>
<% end -%>
<%- if devise_mapping.recoverable? && ! current_user && controller_name != 'passwords' %>
  <% links.push link_to "Forgot your password?", new_password_path(resource_name) %>
<% end -%>
<%- if devise_mapping.confirmable? && ! current_user && controller_name != 'confirmations' %>
  <% links.push link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %>
<% end -%>
<%- if devise_mapping.lockable? && controller_name != 'unlocks' %>
  <% links.push link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %>
<% end -%></p>
<%- if devise_mapping.omniauthable? %>
  <% links.push link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %>
<% end -%></p>
<p id="devise_user_links"><%= links.join(' | ').html_safe %></p>